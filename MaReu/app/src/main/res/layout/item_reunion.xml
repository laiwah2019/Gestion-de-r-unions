<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="@dimen/margin_small">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:id="@+id/color_salle"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/corner_radius"
            android:padding="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_editor_absoluteX="12dp" />

        <TextView
            android:id="@+id/text_reu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_normal"
            android:textSize="@dimen/text_title"
            android:textStyle="bold"
            app:layout_constraintLeft_toRightOf="@+id/color_salle"
            app:layout_constraintTop_toTopOf="@+id/color_salle"
            tools:text="Reunion A -" />

        <TextView
            android:id="@+id/hour_reunion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_normal"
            android:textSize="@dimen/text_title"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@id/text_reu"
            app:layout_constraintLeft_toRightOf="@+id/text_reu"
            app:layout_constraintTop_toTopOf="@id/text_reu"
            tools:text="14h00 -" />

        <TextView
            android:id="@+id/room_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_normal"
            android:textSize="@dimen/text_title"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@id/text_reu"
            app:layout_constraintLeft_toRightOf="@+id/hour_reunion"
            app:layout_constraintTop_toTopOf="@id/text_reu"
            tools:text=" Peach" />


        <TextView
            android:id="@+id/text_mail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_moyen"
            android:textSize="@dimen/text_moyen"
            app:layout_constraintLeft_toLeftOf="@+id/text_reu"
            app:layout_constraintStart_toStartOf="@+id/text_reu"
            app:layout_constraintTop_toBottomOf="@+id/text_reu"
            tools:text="marc@lamzone.com" />

        <ImageButton
            android:id="@+id/icon_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_moyen"
            android:background="@null"
            android:src="@drawable/ic_delete_black_24dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:contentDescription="@string/delete" />

    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>